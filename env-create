#!/bin/bash
set -e  


echo
echo Остановка сервисов


cd docker-images


if [[ "$(uname)" == "Darwin" ]]; then
  docker-compose -f docker-compose.mac.yml down
else
  docker-compose down
fi


echo
echo Создание Docker-образов для сервисов

cd app-keycloak
./make
cd ..

cd app-keycloak-postgres
./make
cd ..

cd app-nginx
./make
cd ..

cd app-postgres
./make
cd ..



cd ..
