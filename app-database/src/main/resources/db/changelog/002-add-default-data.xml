<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">


    <changeSet id="001-add-admin-usr" author="app">

        <!-- Группы -->
        <insert tableName="grp">
            <column name="id" value="1"/>
            <column name="name" value="Администраторы"/>
        </insert>
        <insert tableName="grp">
            <column name="id" value="2"/>
            <column name="name" value="Пользователи"/>
        </insert>

        <insert tableName="usr">
            <!--Создаем админа-->
            <column name="id" value="1"/>
            <column name="name" value="admin"/>
            <column name="email" value="admin@mail.com"/>
        </insert>

        <insert tableName="usr">
            <!--Создаем пользователя-->
            <column name="id" value="2"/>
            <column name="name" value="user"/>
            <column name="email" value="user@mail.com"/>
        </insert>

        <!-- Принадлежность группам -->
        <insert tableName="usrGrp">
            <column name="id" value="1"/>
            <column name="usr" value="1"/>
            <column name="grp" value="1"/>
        </insert>
        <insert tableName="usrGrp">
            <column name="id" value="2"/>
            <column name="usr" value="1"/>
            <column name="grp" value="2"/>
        </insert>
        <insert tableName="usrGrp">
            <column name="id" value="3"/>
            <column name="usr" value="2"/>
            <column name="grp" value="2"/>
        </insert>

    </changeSet>

    <changeSet id="002-add-permission" author="app">
        <!--Права для администратора-->
        <insert tableName="permission">
            <column name="usr" value="1"/>
            <column name="active" value="true"/>
            <column name="permission" value="true"/>
            <column name="permissionType" value="800"/>
        </insert>
        <insert tableName="permission">
            <column name="usr" value="1"/>
            <column name="active" value="true"/>
            <column name="permission" value="true"/>
            <column name="permissionType" value="900"/>
        </insert>


        <!--Права для пользователя-->
        <insert tableName="permission">
            <column name="usr" value="2"/>
            <column name="active" value="true"/>
            <column name="permission" value="true"/>
            <column name="permissionType" value="100"/>
        </insert>

        <!--Права для группы администраторы-->
